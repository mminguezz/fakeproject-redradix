{
  "name": "fakeproject-redradix",
  "version": "1.0.0",
  "description": "A great repository",
  "main": "readme.md",
  "author": "Miguel Mínguez Mazón <m.minguezz@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/mminguezz/fakeproject-redradix"
  },
  "scripts": {
    "start": "npm run server",
    "style": "sass --watch src/css/main.scss:./src/main.css",
    "dist": "copyfiles --flat ./src/main.css ./src/index.html ./src/main.js ./dist/ && copyfiles -u 1 ./src/resources/* ./dist/",
    "server": "browser-sync start --server 'src/' --files 'src/css/main.css, src/*.html'",
    "dev": "concurrently --kill-others \"npm run style\" \"npm run server\""
  },
  "dependencies": {
  },
  "devDependencies": {
    "browser-sync": "^2.27.4",
    "concurrently": "^6.2.0",
    "copyfiles": "^2.4.1",
    "sass": "^1.35.2"
  }
}
